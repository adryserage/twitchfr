// This is your Prisma schema file
datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Streamer {
  id              String    @id
  displayName     String
  profileImageUrl String
  addedAt         DateTime  @default(now())
  lastUpdated     DateTime  @default(now()) @updatedAt

  @@index([addedAt])
}
